@model ComputerStoreModels.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация нового пользователя</h2>

<form method="post" asp-action="Register">
    <div class="form-group">
        <label>Имя</label>
        <input asp-for="FullName" class="form-control" placeholder="Иван Иванов" />
    </div>
    <div class="form-group">
        <label>Логин</label>
        <input asp-for="Login" class="form-control" placeholder="ivan1990" />
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="ivan@example.com" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Зарегистрироваться</button>
</form>

<p class="mt-3">
    Уже зарегистрированы? <a asp-action="Login">Войдите</a>
</p>