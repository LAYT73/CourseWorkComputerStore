@model IEnumerable<ComputerStoreModels.Models.Order>

@{
    ViewData["Title"] = "Мои заказы";
}

<h2>Мои заказы</h2>
<a asp-action="Create" class="btn btn-success mb-3">Создать заказ</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название заказа</th>
            <th>Товары</th>
            <th>Статус</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Name</td>
                <td>
                    @string.Join(", ", order.OrderProducts.Select(op => op.Product?.Name))
                </td>
                <td>@order.Status</td>
                <td>@order.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
