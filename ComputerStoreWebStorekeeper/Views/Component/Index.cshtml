@model IEnumerable<ComputerStoreModels.Models.Component>

@{
    ViewData["Title"] = "Мои комплектующие";
}

<h2>Мои комплектующие</h2>
<a asp-action="Create" class="btn btn-success mb-3">Создать новое</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Сборки</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var component in Model)
        {
            <tr>
                <td>@component.Name</td>
                <td>@component.Description</td>
                <td>@component.Price.ToString("C")</td>
                <td>
                    @string.Join(", ", component.AssemblyComponents.Select(ac => ac.Assembly?.Name))
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@component.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@component.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
